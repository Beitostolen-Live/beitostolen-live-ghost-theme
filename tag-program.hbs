{{!< default }}

<div class="container-fluid spacetop">
    <article>
        <h1 id="paintBrushBg">Program</h1>
        <div id="carouselProgram" class="carousel slide" data-ride="carousel">
            <ol class="carousel-indicators">
                {{#get "posts" filter="tags:program" order="published_at asc"}}
                    {{#foreach posts }}
                        <li data-target="#carouselProgram" data-slide-to="{{@index}}"></li>
                    {{/foreach}}
                {{/get}}
            </ol>
            <div class="carousel-inner">
                {{#get "posts" filter="tags:program" order="published_at asc"}}
                    {{#foreach posts }}
                        {{#if featured}}
                            <div class="carousel-item active">
                                <img src="{{img_url feature_image}}" class="d-block w-100" alt="{{excerpt}}">
                                <div class="carousel-caption d-none d-md-block">
                                    {{!-- <h5>{{title}}</h5>
                                    <p>{{content}}</p> --}}
                                </div>
                            </div>
                        {{else}}
                            <div class="carousel-item">
                                <img src="{{img_url feature_image}}" class="d-block w-100" alt="{{excerpt}}">
                                <div class="carousel-caption d-none d-md-block">
                                    {{!-- <h5>{{title}}</h5>
                                    <p>{{content}}</p> --}}
                                </div>
                            </div>
                        {{/if}}
                    {{/foreach}}
                {{/get}}
            </div>
            <a class="carousel-control-prev" href="#carouselProgram" role="button" data-slide="prev">
                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                <span class="sr-only">Previous</span>
            </a>
            <a class="carousel-control-next" href="#carouselProgram" role="button" data-slide="next">
                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                <span class="sr-only">Next</span>
            </a>
        </div>
    </article>
</div>